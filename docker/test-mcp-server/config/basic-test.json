{
  "server": {
    "name": "Basic Test MCP Server",
    "version": "1.0.0",
    "port": 3001,
    "protocol": "http",
    "host": "0.0.0.0"
  },
  "scenarios": [
    {
      "name": "basic-functionality",
      "description": "Test basic MCP protocol functionality",
      "enabled": true
    }
  ],
  "tools": [
    {
      "name": "echo",
      "description": "Echo back the input data",
      "inputSchema": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Message to echo back"
          }
        },
        "required": ["message"]
      },
      "behavior": "success",
      "responseData": null,
      "delayMs": 0
    },
    {
      "name": "calculate",
      "description": "Perform basic mathematical calculations",
      "inputSchema": {
        "type": "object",
        "properties": {
          "operation": {
            "type": "string",
            "enum": ["add", "subtract", "multiply", "divide"]
          },
          "a": {
            "type": "number"
          },
          "b": {
            "type": "number"
          }
        },
        "required": ["operation", "a", "b"]
      },
      "behavior": "success",
      "delayMs": 0
    }
  ],
  "resources": [
    {
      "uri": "test://basic-data",
      "name": "Basic Test Data",
      "description": "Simple test data for basic functionality tests",
      "mimeType": "application/json",
      "behavior": "success",
      "content": "{\"testData\": \"basic\", \"timestamp\": \"2024-01-01T00:00:00Z\", \"items\": [1, 2, 3]}",
      "delayMs": 0
    }
  ],
  "prompts": [
    {
      "name": "hello",
      "description": "Simple greeting prompt",
      "arguments": [
        {
          "name": "name",
          "description": "Name to greet",
          "required": false
        }
      ],
      "behavior": "success",
      "responseTemplate": "Hello {{name}}! This is a test prompt response.",
      "delayMs": 0
    }
  ],
  "errorSimulation": {
    "connectionDropRate": 0,
    "responseErrorRate": 0,
    "slowResponseRate": 0,
    "timeoutDuration": 5000
  },
  "logging": {
    "level": "info",
    "requests": true,
    "responses": true
  }
}